<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Edit Blog</title>
    <link rel="stylesheet" type="text/css" href="/abc/css/freaks.css">
    <link rel="stylesheet" type="text/css" href="/abc/css/registration.css">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="app sidebar-mini">
  
  <% include ../freaks/header.ejs %>

  <% include ../freaks/sidenav.ejs %>
  
    <main class="app-content">

      <div class="app-title">
        <div>
          <h1>Edit Blog</h1>
        </div>
      </div>

    
      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div class="tile-body">
              <div class="table-responsive">
                  
                <table class="table table-hover table-bordered" id="sampleTable">
             
                  <thead> 
                   
                    <tr>
                      <th>Tittle</th>
                      <th>Location</th>
                      <th>Post Date</th>
                      <th>Image</th>
                      <th>Edit</th>
                      <th>Delete Blog</th>
                    </tr>
                  </thead>
                   
                <% for(var i=0 ; i < blog.length; i++ ) { %>
                      
                  <tbody>    
                    
                      
                       
                      <tr>
                     
                      <td><%=blog[i].title%></td>
                      <td><%=blog[i].location%></td>
                      <td><%=blog[i].date%></td>
                      <td><img  src="<%=blog[i].image%>" height="65px" width="100px"></td>
                      <td>
                        <a href="/freaks/edit/<%=blog[i].id%>"> <button class="btn btn-lg btn-block" type="submit">Edit</button></a>
                          
                      </td>
                          
                      <td>
                        <a href="/freaks/delete/<%=blog[i].id%>"> <button class="btn btn-lg btn-block" type="submit" >Delete</button></a>
                      </td>
                        
                    </tr>
                      
                  </tbody>
                <% }%>
                </table>
                 
                  
              </div>
            </div>
          </div>
        </div>
      </div>



    </main>
    <script src="/abc/js/jquery-3.3.1.min.js"></script>
    <script src="/abc/js/popper.min.js"></script>
    <script src="/abc/js/bootstrap.min.js"></script>
    <script src="/abc/js/main.js"></script>
  </body>
</html>